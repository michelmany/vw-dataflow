{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../../libs/types"
    },
    {
      "path": "../../libs/utils"
    }
  ]
}
