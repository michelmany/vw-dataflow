{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",

    // Fixes for React + JSX + compatibility
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../libs/types"
    },
    {
      "path": "../../libs/utils"
    }
  ]
}
