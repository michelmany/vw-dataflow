{
  "name": "vw-dataflow",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "mocks/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "node mocks/api/server.js",
    "build": "npm run build --workspace=apps/web",
    "preview": "npm run preview --workspace=apps/web"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.x",
    "@types/react-dom": "^18.2.x",
    "concurrently": "^8.2.2",
    "json-server": "^0.17.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "jotai": "^2.12.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
