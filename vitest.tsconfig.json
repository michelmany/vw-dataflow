{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["react", "node", "vitest/globals", "@testing-library/jest-dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts", 
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "vitest.setup.ts",
    "vitest-global.d.ts"
  ]
}
