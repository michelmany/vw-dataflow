{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["../../libs/*/src"],
      "@test-utils/*": ["../../libs/test-utils/src/*"],
      "@mocks/*": ["../../libs/mocks/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*", "src/**/*.spec.*", "src/**/__tests__/**/*"],
  "references": [
    {
      "path": "../../libs/ui"
    },
    {
      "path": "../../libs/hooks"
    },
    {
      "path": "../../libs/utils"
    },
    {
      "path": "../../libs/services"
    },
    {
      "path": "../../libs/types"
    },
    {
      "path": "../../libs/test-utils"
    },
    {
      "path": "../../libs/mocks"
    }
  ]
}
